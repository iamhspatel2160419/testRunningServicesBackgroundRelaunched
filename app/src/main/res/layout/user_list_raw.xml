<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/layout_bgg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="123dp"
        android:layout_height="148dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/IvCustomImage"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="20sp"
        android:text="User Id:"
        android:layout_width="92dp"
        android:layout_height="33dp"
        android:id="@+id/tvUserIdTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvFirstName"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/IvCustomImage"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.43" />

    <TextView
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="20sp"
        android:text="0"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:id="@+id/tvUserId"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvFirstName"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="20sp"
        android:text="First Name"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:id="@+id/tvFirstName"
        app:layout_constraintBottom_toBottomOf="@+id/IvCustomImage"
        app:layout_constraintTop_toTopOf="@+id/IvCustomImage"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/IvCustomImage"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Last Name"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:id="@+id/tvLastName"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/IvCustomImage"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName" />
</android.support.constraint.ConstraintLayout>